MP weeks 3-4

params <- list(
  laplace        = 1,
  alpha_pmi      = 0.7,
  w12            = 1.1,
  w34            = 1.25,
  w_cross        = 0.20,
  socs_bonus_log = log(1.7),

  leak_prior     = NULL,  # leak OFF
  beta_leak      = 0,

  use_cross_pool = TRUE, 
  K_prefix       = 80, 
  K_suffix       = 80,

  use_mass_split = TRUE,
  sample_limit   = 800,

  respect_locks  = TRUE, 
  lock_threshold = 0.88,

  always_offer_isolators = TRUE,
  top_n          = 20
)


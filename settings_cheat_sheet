MP weeks 1-2

laplace        = 1.0
alpha_pmi      = 0.97      # strong pairwise coupling
w12            = 1.05      # weight on block (digit_1, digit_2)
w34            = 1.21      # weight on block (digit_3, digit_4)
w_cross        = 0.37      # weight on cross-pairs (1,3), (1,4), (2,3), (2,4)
socs_bonus_log = 0.68      # â‰ˆ log(1.97) suffix bump factor

leak_prior     = None      # leak OFF
beta_leak      = 0.0

use_cross_pool = True
K_prefix       = 80
